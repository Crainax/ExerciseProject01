<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#8f0</item>
    </style>


    <style name="PasswordTitleStyle" parent="TitleStyle">
        <item name="android:background">#66ff6600</item>
    </style>

    <style name="Setup_Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Setup_Content.star">
        <item name="android:drawableLeft">@drawable/star</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <style name="btn_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/btn_style1_selector</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:onClick">next</item>
        <item name="android:text">下一步</item>
    </style>


    <style name="btn_previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/btn_style1_selector</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:onClick">previous</item>
        <item name="android:text">上一步</item>
    </style>
</resources>
